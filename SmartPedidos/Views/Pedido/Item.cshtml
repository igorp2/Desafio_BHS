@model SmartPedidos.Models.Item

<h2>Formulário de Item</h2>

<form class="form-horizontal" asp-action="Item" asp-controller="Pedido" method="POST">

    <input type="hidden" class="form-control" asp-for="Id">
    <div class="form-group">
        <label class="col-md-1 control-label" for="Descricao">Descrição</label>
        <div class="col-md-2">
            <input type="text" class="form-control" asp-for="Descricao">
        </div>
    </div>
    <div class="form-group">
       <label class="col-md-1 control-label" for="ValorItem">Valor</label>
        <div class="col-md-2">
            <input type="text" class="form-control" asp-for="ValorItem">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button href= "Pedido/Criar" class="btn btn-success">Salvar</button>
        </div>
    </div>
</form>
